<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_back"
        android:paddingBottom="60dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/end_screen_card_view"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="24dp">

            <ImageView
                android:id="@+id/end_screen_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/end_screen_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/almendra_display"
            android:text="hsgksnfkjnhlkllsjflglksflknhlknn,b,lkfglakjlkljlfkjhlksjlfjosrtiojglkdfhmfkbksfsklfffsnshnuthjstihtoistjisipsgtoikljljkjslfjlkj"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/end_screen_button_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/almendra_sc"
            android:text="@string/choose_your_adventure_again"
            android:elevation="4dp"
            android:background="@drawable/rounded_rectangle"
            app:backgroundTint="@null"
             />
    </LinearLayout>
</ScrollView>